<h1>Team</h1>
<div>
	<label for="name">Name</label>
	{{input id='name' type='text' value=model.name}}
</div>

<h2>Players</h2>
<button {{action 'addPlayer'}}>Add Player</button>

{{#if model.players}}
	<ol>
		{{#each model.players as |player|}}
			<li>
				<div>
					<label for="firstName">First Name</label>
					{{input id='firstName' type='text' value=player.firstName}}
				</div>
				<div>
					<label for="lastName">Last Name</label>
					{{input id='lastName' type='text' value=player.lastName}}
				</div>
				<h3>Player Validation Errors</h3>
				{{#if player.validations.isInvalid}}
					<ul>
						{{#each player.validations.errors as |error|}}
							<li>{{error.attribute}}: {{error.message}}</li>
						{{/each}}
					</ul>
				{{else}}
					None
				{{/if}}
			</li>
		{{/each}}
	</ol>
{{/if}}

<h2>Validation Errors</h2>
{{#if model.validations.isInvalid}}
	<ul>
		{{#each model.validations.errors as |error|}}
			<li>{{error.attribute}}: {{error.message}}</li>
		{{/each}}
	</ul>
{{else}}
	None
{{/if}}